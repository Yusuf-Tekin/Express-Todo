doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/style.css")
        link(rel="stylesheet", href="/tablet.css", media="(max-width:1131px)")
        link(rel="stylesheet", href="/mobile.css", media="(max-width:500px)")
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        
        link(rel="stylesheet", href="/alertify.css")
        title Todo App
    body 
    - /// Burası Menü kısmı

    header 
        nav 
            ul 
                li.user-info 
                    div.user-image 
                        <i class="bi bi-card-image"></i>
                        
                    div.user-name 
                        a(href="http://localhost:5000") App
                        span.bottom-icon <i class="bi bi-chevron-down"></i>

                li.icons
                    div.notification(title = "Bildirimler")
                        <i class="bi bi-bell-fill"></i>
                        span.badge 2
                    
                    div.messages(title = "Mesajlar") <i class="bi bi-chat-fill"></i>



    - /// Burası Ana kısmı
    section 
        div.top
            div.list-name
                span Todo-App
            
            div.order-icons
                span.icon-1(title= "Row") 
                    <i class="bi bi-grid-fill"></i>
                span.icon-2(title= "List")
                    <i class="bi bi-list-check"></i>
        div.center
            div.lists
                div.newList
                each list in lists.reverse()
                    div.card
                        span.deleteIcon(title = "Sil" id = list.id)
                            i.bi.bi-trash2-fill(id = list.id)
                        div.elements
                            div.icon 
                                <i class="bi bi-image"></i>
                            div.list-name 
                                span=list.listName

                        div.go
                            a(href = `/list/${list.id}`)
                                <i title ="İncele" class="bi bi-arrow-right-square-fill"></i>         
        div.AddButton
            button.addButton(title = "Yeni Liste Oluştur") <i class="bi bi-plus"></i>
                
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        script(src="https://cdn.jsdelivr.net/npm/@mojs/core")
        script(src="/alertify.min.js")
        script(src="/UI2.js") 